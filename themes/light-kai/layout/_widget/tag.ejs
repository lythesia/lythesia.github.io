<% if (site.tags.length){ %>
<div class="widget tag">
  <h3 class="title title-tag"><%= __('tags') %></h3>
  <ul class="entry">
  <% site.tags.sort('name').each(function(item){ %>
    <li><a href="<%- config.root %><%- item.path %>"><%= item.name %><span><%= item.posts.length %></span></a></li>
  <% }); %>
  </ul>
</div>
<% } %>
